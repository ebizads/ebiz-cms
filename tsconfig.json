{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "Preserve",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
    "components/*": ["app/components/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "components/myLogo.js", "sanity.config.js"],
  "exclude": ["node_modules"]
}
